<Window x:Class="HospitalManagementSystemv1._0.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalManagementSystemv1._0"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="350" FontSize="14" Background="#1f7cf0">
    <Border Background="#fae192" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="Black"/>
            <TextBox Name="txtUsername" Background="#545d6e" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="Black"/>
            <PasswordBox Name="txtPassword" Background="#545d6e" Foreground="White" FontSize="18"/>
            <Button Name="btnSubmit" Content="Submit" Margin="60 10" Background="#545d6e" Foreground="Black" FontSize="18" Click="btnSubmit_Click" />


        </StackPanel>
    </Border>

</Window>
